{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "import"
  ],
  "env": {
      "es6": true,
      "node": true,
      "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "keyword-spacing": [2, {
      "before": true,
      "after": true,
      "overrides": {
        "catch": { "after": false},
        "for": {"after": false},
        "if": {"after": false},
        "switch": { "after": false},
        "while": {"after": false}
      }
    }],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "import/no-unresolved": 2,
    "eqeqeq": [2, "smart"],
    "no-multi-spaces": 2
  },
  "globals": {}
}
